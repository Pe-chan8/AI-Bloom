<% content_for :title, "投稿詳細 - AI-Bloom" %>

<div class="max-w-2xl mx-auto px-4 py-8 space-y-6">

  <!-- タイトル -->
  <h1 class="text-2xl font-bold text-slate-800">投稿詳細</h1>

  <!-- 投稿本文 -->
  <div class="bg-[#FFF7EA] rounded-2xl px-4 py-3 space-y-2 shadow-sm border border-amber-100">
    <p class="text-sm text-slate-700 whitespace-pre-wrap">
      <%= @post.body %>
    </p>

    <p class="text-xs text-slate-400 text-right">
      <%= @post.created_at.strftime("%Y-%m-%d %H:%M") %>
    </p>
  </div>

  <!-- AIバディからのメッセージ -->
  <% if @ai_preview_message.present? %>
    <section class="mt-4">
      <p class="text-xm font-semibold text-sky-700 mb-4">
        AIバディからのメッセージ
      </p>

      <div class="flex items-start gap-3">

        <!-- アイコン-->
        <div class="mt-1 flex-shrink-0">
          <div class="w-12 h-12 rounded-full bg-gradient-to-br from-sky-50 to-amber-100
                      flex items-center justify-center overflow-hidden border border-amber-200">
            <%= image_tag "buddies/analytical_buddy.png",
                  alt: "バディアイコン",
                  class: "w-full h-full object-contain" %>
          </div>
        </div>

        <!-- 吹き出し -->
        <div class="flex-1 rounded-2xl border border-sky-200 bg-white shadow-sm pl-2 pr-4 py-3">
          <p class="text-sm text-slate-700 whitespace-pre-wrap leading-relaxed" style="text-indent: 0;"><%= @ai_preview_message %></p>  
        </div>
      </div>
    </section>
  <% end %>

  <!-- 戻る・編集リンク -->
  <div class="flex justify-between text-sm mt-6">
    <%= link_to "← 投稿一覧に戻る", posts_path, class: "text-sky-600 hover:underline" %>
    <%= link_to "編集する", edit_post_path(@post), class: "text-amber-600 hover:underline" %>
  </div>

</div>
